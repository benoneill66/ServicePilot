{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ServicePilot",
  "version": "0.1.0",
  "identifier": "com.servicepilot.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ServicePilot",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 500,
        "titleBarStyle": "Transparent",
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/servicepilot-sidecar"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
